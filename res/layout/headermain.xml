<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/headerwelcom"
    android:layout_width="match_parent"
    android:layout_height="95sp"
    android:orientation="horizontal"
    android:gravity="center_horizontal|fill_horizontal|fill_vertical"
    android:paddingBottom="10dp"
    android:paddingRight="10dp" >
	<!-- android:gravity="center_horizontal|fill_horizontal|fill_vertical" -->
    <LinearLayout
        android:layout_width="95sp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:background="@drawable/logo"
        android:orientation="vertical">
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:orientation="horizontal" >

        <com.cache.tontonpalmis.ui.RoundedImageView
            android:layout_width="95dip"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:src="@drawable/user" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#00ccff"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="16dp"
                    android:layout_height="15dp"
                    android:src="@drawable/start" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvZone"
                android:layout_width="wrap_content"
                android:layout_height="20dip"
                android:drawableLeft="@drawable/tel_digi"
                android:drawableRight="@drawable/wifi"
                android:textColor="#663300"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="71dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.95"
                android:text="18/07/2014 10:23:12 PM"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_marginTop="5dp"
                android:background="#FE9900"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#fff"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_marginTop="3dp"
                android:background="#000000"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#fff"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>