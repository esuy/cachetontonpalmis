<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/border_bottom_list_gray"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">
	<!-- android:background="@drawable/border_round_layout_gray" -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:layout_marginBottom="5dp"
                android:background="#FE9900"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tvGain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#fff"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:layout_marginTop="5dp"
                android:background="#000000"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tvPerte"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#fff"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
        
        
        <com.cache.tontonpalmis.ui.RoundedImageView
            android:id="@+id/userImage"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/user"
            android:contentDescription="chat" />
    	
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="vvdjfgdf"
                android:textColor="#00ccff"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="16dp"
                    android:layout_height="15dp"
                    android:src="@drawable/start" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvZone"
                android:layout_width="wrap_content"
                android:layout_height="20dip"
                android:drawableLeft="@drawable/tel_digi"
                android:drawableRight="@drawable/wifi"
                android:textColor="#663300"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="71dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.95"
                android:text="18/07/2014 10:23:12 PM"
                android:textSize="12sp" />
        </LinearLayout>
        
    </LinearLayout>

    
    
    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:background="@drawable/border_round_layout_gray"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:padding="3dp"
        android:gravity="center_vertical" >
        <ListView
            android:id="@+id/lstMsg"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content">
        </ListView>
    </LinearLayout>

</RelativeLayout>