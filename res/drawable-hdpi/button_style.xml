<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true" >
    <shape>
      <solid
          android:color="#0085cc" />
      <stroke
          android:width="1dp"
          android:color="#0085cc" />
      <corners
          android:radius="15dp" />
      <padding
          android:left="10dp"
          android:top="10dp"
          android:right="10dp"
          android:bottom="10dp" />
    </shape>
  </item>
  <item>
    <shape>
      <gradient
          android:startColor="#0085cc"
          android:endColor="#0085cc"
          android:angle="270" />
      <stroke
          android:width="1dp"
          android:color="#0085cc" />
      <corners
          android:radius="15dp" />
      <padding
          android:left="2dp"
          android:top="2dp"
          android:right="2dp"
          android:bottom="2dp" />
    </shape>
  </item>
</selector>